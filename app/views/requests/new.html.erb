<h1>New Request for <%= @equipment.title %></h1>

<%= simple_form_for([@equipment, @request]) do |f| %>
    <%= f.input :exchange_availability, label: "Select your preferred pick up date and time", as: :datetime, html5: true %>
    <%= f.input :message, as: :text, placeholder: "Write a message to #{@equipment.user.name} (optional)" %>
    <%= f.submit 'Request equipment', class: 'btn-flat remove-btn-border' %>
  <% end %>

<%= link_to "Home", root_path %>
<%= link_to "Back", equipment_path(@equipment) %>
