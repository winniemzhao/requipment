<h1>Edit my request for <%= @request.equipment.title %></h1>

  <%= simple_form_for(@request, url: my_request_path) do |f| %>
    <%= f.input :exchange_availability, label: "Change your preferred pick up date and time", as: :datetime, html5: true %>
    <%= f.input :message, as: :text %>
    <%= f.submit 'Edit equipment request', class: 'btn-flat remove-btn-border' %>
  <% end %>

<%= link_to "Back to request", my_request_path(@request)%>
<%= link_to "Home", root_path %>
<%= link_to "My requests", my_requests_path %>
